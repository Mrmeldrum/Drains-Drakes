<h1>Players</h1>
<form action="/players/new_party" method="post">
  <input type="submit" value="Begin New Group">
</form>

<form action="/players/new" method="get">
  <input type="submit" value="Create New Character">
</form>
<hr />

<% @players.each do |player| %>

<form action="/players/<%= player.id %>/edit" method="get">
  <input type="submit" value="Update Character Information">
</form>


<p>Name: <%= player.name() %> </p>

<p>Race: <%= player.race() %> </p>

<p>Class: <%= player.class()%> </p>

<p>Health: <%= player.health() %> </p>

<p>Weapon: <%= player.inventory.weapon() %></p>
<p>Armour: <%= player.inventory.armour() %></p>
<p>Potions: <%= player.inventory.potions() %></p>

<form action="/players/<%= player.id %>/delete" method="post">
  <input type="submit" value="Remove Character">
</form>

<hr />
<%end%>
