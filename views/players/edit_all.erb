<h1>Update the party below</h1>

<form action="/players/edit_all" method="post">

<% for player in @players %>
<hr/>
  <h2>Character: <%= player.name %> the <%= player.race %> <%= player.class %></h2>

  <label for="health">Current Health: </label>
  <input id="health" type="number" name="<%="#{player.id}[health]"%>" value="<%= player.health %>">

  <label for="weapon">Weapon: </label>
  <input id="weapon" type="text" name="<%="#{player.id}[weapon]"%>" value="<%= player.inventory.weapon %>">
<br>
<br>
  <label for="armour">Armour: </label>
  <input id="armour" type="text" name="<%="#{player.id}[armour]"%>" value="<%= player.inventory.armour %>">

  <label for="potions">Potions: </label>
  <input id="potions" tpe="text" name="<%="#{player.id}[potions]"%>" value="<%= player.inventory.potions %>">

  <input type="hidden" name="<%="#{player.id}[id]"%>" value="<%=player.id%>">
<br>
<br>
 <%end%>
<br>
 <input type="submit" value="Update All Characters">
</form>
